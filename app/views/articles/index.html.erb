<%= render "shared/header" %>
<div class='main'>

 <ul class='article-lists'>

  <% @articles.each do |article|  %>
   <li class='list'>
      <%= link_to articles_path(article.id) do %>
      <div class='article-image'>
        <%= image_tag article.image.variant(resize: '400x400'), class: "article-img" %>
      </div>
        <h2 class='article-name'>
        <%= article.title %>
        </h2>
      <% end %>
      </li>
  <% end %>
</div>
</ul>
<%= render "shared/footer" %>
